<dir class="row" style="padding-left:0px">
	<div class="col-md-12">
		<% if user_signed_in? %>		
		<ul class="nav nav-tabs">
		<%
		 if params[:status].present?
			if params[:status] == "Home"
				h = "active"	
				b = ""
				n = ""			
			elsif params[:status] == "New"
				n = "active"
				h = ""
				b = ""
			elsif params[:status] == "Board"
				b = "active"
				n = ""
				h = ""			
			end
		else
			h = "active"
			b = ""
			n = ""	
		end
		%>
		<li role="presentation" class="<%=h%>" ><%= link_to "Home",{action: "index", status: "Home"}%></li>
		<li role="presentation" class="<%=n%>" ><%= link_to "New", {action: "new", status: "New"}%></li>
		<li role="presentation" class="<%=b%>" ><%= link_to "DashBoard",{action: "board", status: "Board"}%></li>
		<li role="presentation" style="float:right"><%= link_to "登出", destroy_user_session_path, method: "delete"%></li>
		</ul>
		<% else %>
		<%= link_to "註冊", new_user_registration_path %>
		<%= link_to "登入", new_user_session_path %>
		<% end %>
	 </div>
</div>